@model Context.Entry

@{
    ViewBag.Title = "Agregar Entrada";
}

<div class="page-header">
    <h2>Agregar Entrada</h2>
</div>

<form method="post">
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label class="control-label">Título</label>
                <input class="form-control" name="Title" type="text" maxlength="100" />
            </div>
            <div class="form-group">
                <label class="control-label">Contenido</label>
                <textarea class="form-control" name="Content"></textarea>
            </div>
            <div class="form-group">
                <label class="control-label">Imagen</label>
                <input class="form-control" name="Image" type="text" placeholder="http://" maxlength="200"/>
            </div>
            <div class="form-group">
                <label class="control-label">Autor</label>
                <input class="form-control" name="Author" type="text" maxlength="50" />
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">Guardar</button>
                <button class="btn btn-default" type="reset">Limpiar</button>
            </div>
        </div>
    </div>
</form>