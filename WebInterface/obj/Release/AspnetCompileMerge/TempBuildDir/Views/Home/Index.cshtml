@using Context;
@using WebInterface.Models

@model Pagination<Entry>

@{
    ViewBag.Title = "Inicio";
}

<div class="page-header">
    <a class="btn btn-success pull-right" href="/Home/Add">Agregar nueva entrada</a>
    <h2>Inicio</h2>
</div>

<div class="row">
    <div class="col-xs-3">
        <form method="get">
            <div class="input-group">
                <input class="form-control" type="text" name="search" placeholder="Buscar..." value="@Model.Search">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        </form>

        <h4>Noticias</h4>

        <div id="news-list" class="list-group">

        </div>
    </div>
    <div class="col-xs-9">
        @foreach (Entry entry in Model.Items)
        {
            @Html.Partial("_BlogEntry", entry)
        }
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-9 col-sm-offset-3">
        @Html.Partial("_Pagination", Model)
    </div>
</div>

<script id="news-tmpl" type="text/x-jquery-tmpl">
    <a class="list-group-item">
        <h5 class="list-group-item-heading">${Text}</h5>
        <p class="list-group-item-text">${Date}</p>
    </a>
</script>
